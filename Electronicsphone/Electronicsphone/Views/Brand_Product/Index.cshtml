@model IEnumerable<Electronicsphone.Models.Brand_Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; color:red">Thông tin nhà cung ứng</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNhaSX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HinhNhaSX)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNhaSX)
        </td>
        <td>
           <img src="@item.HinhNhaSX" alt="Hinhnhasanxuat" width="100px" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaNhaSX }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaNhaSX }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaNhaSX })
        </td>
    </tr>
}

</table>
