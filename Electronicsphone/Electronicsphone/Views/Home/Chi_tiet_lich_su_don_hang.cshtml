@model Electronicsphone.Models.Order
@{
	ViewBag.Title = "Chi_tiet_lich_su_don_hang";
	Layout = "~/Views/Shared/_Shopping.cshtml";
}
<h2 style="text-align:center;color:red;font-size:30px;text-transform:uppercase">Chi tiết thông tin đơn hàng</h2>
	<table class="table">
		<tr>
			<th>Tên sản phẩm</th>
			<th>Ảnh</th>
			<th>Số lượng</th>

			<th>Đơn giá</th>
			

		</tr>
		@foreach (var item in Model.OrderDetails)
		{
			<tr>
				<td>@item.Product.Tensp</td>
				<td>
					<img src="@item.Product.HinhAnh" width="100px" />
				</td>
				<td>@item.Soluong</td>
				<td>@String.Format("{0:0,0}", item.GiaHienTai)</td>
			</tr>

		}
	</table>

